@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section text-center">
    <h1 class="display-4">
        <i class="fas fa-film text-warning"></i> Bem-vindo ao IM2B
    </h1>
    <p class="lead">Descubra e gerencie seu catálogo de filmes e atores</p>

    <div class="mt-4">
        <a asp-controller="Filme" asp-action="Index" class="btn btn-imdb btn-lg me-2">
            <i class="fas fa-video"></i> Explorar Filmes
        </a>
        <a asp-controller="Ator" asp-action="Index" class="btn btn-outline-light btn-lg">
            <i class="fas fa-star"></i> Ver Atores
        </a>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12">
        <h2 class="text-center mb-4">Filmes em Destaque</h2>

        <div id="carouselFilmes" class="carousel slide" data-bs-ride="carousel">
            <!-- Slides -->
            <div class="carousel-inner">
                @{
                    bool first = true;
                }
                @foreach (var filme in Model)
                {
                    <div class="carousel-item @(first ? "active" : "")">
                        <div class="row justify-content-center">
                            <div class="col-md-8 text-center">
                                <img src="@Url.Content($"~/cartazes/{filme.Id}.jpg")"
                                     class="d-block w-100 rounded"
                                     style="max-height: 400px; object-fit: cover;"
                                     alt="@filme.Titulo"
                                     onerror="this.src='/images/no-poster.png';" />

                                <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-75 rounded p-3">
                                    <h5>@filme.Titulo</h5>
                                    <p>@filme.Sinopse</p>
                                    <p><strong>Ano:</strong> @filme.DataLancamento.Year</p>

                                    <a asp-controller="Filme"
                                       asp-action="Details"
                                       asp-route-id="@filme.Id"
                                       class="btn btn-sm btn-warning">
                                        <i class="fas fa-eye"></i> Ver Detalhes
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    first = false;
                }
            </div>

            <!-- Controls -->
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselFilmes" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Anterior</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselFilmes" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Próximo</span>
            </button>
        </div>
    </div>
</div>



        <!-- Link para Catálogo Completo -->
        <div class="text-center mt-5">
            <a asp-controller="Filme" asp-action="Index" class="btn btn-imdb btn-lg">
                <i class="fas fa-film"></i> Veja nosso Catálogo Completo
            </a>
        </div>
    </div>
</div>
