@model IM2B.ViewModels.Ator.DetailsAtorViewModel

@{
    ViewData["Title"] = "Detalhes do Ator";
}

<div class="hero-section">
    <div class="container">
        <h2 class="mb-3">
            <i class="fas fa-user"></i> Detalhes do Ator
        </h2>
    </div>
</div>

<div class="card bg-dark text-light border-warning">
    <div class="card-header bg-imdb">
        <h3 class="mb-0">@Model.Nome</h3>
    </div>

    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                <i class="fas fa-calendar-alt"></i> Data de Nascimento
            </dt>
            <dd class="col-sm-9">
                @Model.DataNasc.ToString("dd/MM/yyyy")
            </dd>

            @if (Model.DataObito.HasValue)
            {
                <dt class="col-sm-3">
                    <i class="fas fa-cross"></i> Data de Óbito
                </dt>
                <dd class="col-sm-9">
                    @Model.DataObito.Value.ToString("yyyy")
                </dd>
            }

            <dt class="col-sm-3">
                <i class="fas fa-align-left"></i> Biografia
            </dt>
            <dd class="col-sm-9">
                @(string.IsNullOrWhiteSpace(Model.Biografia)
                                ? "Não disponível"
                                : Model.Biografia)
            </dd>

            <dt class="col-sm-3">
                <i class="fas fa-film"></i> Filmes
            </dt>
            <dd class="col-sm-9">
                @if (Model.Papeis != null && Model.Papeis.Any())
                {
                    <div id="atorPapeisCarousel"
                         class="carousel slide"
                         data-bs-ride="carousel">

                        <div class="carousel-inner">
                            @for (int i = 0; i < Model.Papeis.Count; i++)
                            {
                                var filme = Model.Papeis[i];
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <div class="card bg-dark border-secondary"
                                         style="width: 220px; margin:auto;">
                                        <div class="card-body text-center">
                                            <h5 class="card-title text-warning">
                                                @filme.FilmeTitulo
                                            </h5>

                                            <p class="mb-1">
                                                <small>
                                                    @filme.DataLancamento.Year
                                                </small>

                                            </p>

                                            <p class="card-text">
                                                <small>
                                                    Personagem: @filme.Personagem
                                                </small>
                                            </p>

                                            <a asp-controller="Filme"
                                               asp-action="Details"
                                               asp-route-id="@filme.FilmeId"
                                               class="btn btn-sm btn-outline-warning">
                                                <i class="fas fa-eye"></i> Ver Filme
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                                }
                        </div>

                        <button class="carousel-control-prev"
                                type="button"
                                data-bs-target="#atorPapeisCarousel"
                                data-bs-slide="prev">
                            <span class="carousel-control-prev-icon"></span>
                            <span class="visually-hidden">Anterior</span>
                        </button>

                        <button class="carousel-control-next"
                                type="button"
                                data-bs-target="#atorPapeisCarousel"
                                data-bs-slide="next">
                            <span class="carousel-control-next-icon"></span>
                            <span class="visually-hidden">Próximo</span>
                        </button>
                    </div>
                }
                else
                {
                    <span class="text-muted">
                        Este ator ainda não participou de nenhum filme.
                    </span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    @if (User.IsInRole("Curador"))
    {
        <a asp-action="Edit"
           asp-route-id="@Model.Id"
           class="btn btn-primary">
            <i class="fas fa-edit"></i> Editar
        </a>
    }

    <a asp-action="Index"
       class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Voltar à lista
    </a>
</div>
