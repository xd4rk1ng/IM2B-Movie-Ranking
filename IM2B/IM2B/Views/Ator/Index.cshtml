@model IEnumerable<shared.Models.Ator>
@using System.Security.Claims

@{
    string role = User.IsInRole("Curador") ? "Curador" :
                  User.IsInRole("Utilizador") ? "Utilizador" : "Visitante";

    ViewData["Title"] = "Lista de Atores";
}

<h2>@ViewData["Title"]</h2>

<!-- Search Form -->
<form asp-action="Index" method="get" class="mb-3 d-flex">
    <input type="text" name="search" class="form-control me-2"
           placeholder="Procurar por nome..." value="@ViewData["CurrentSearch"]" />
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>

@if (role == "Curador") {
    <a class="btn btn-success mb-3" asp-action="Create">Registar Ator</a>
}

@if (!Model.Any())
{
    <p>Nenhum ator encontrado.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Data de Nascimento</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ator in Model)
            {
                <tr>
                    <td>@ator.Nome</td>
                    <td>@ator.DataNasc.ToString("dd/MM/yyyy")</td>
                    <td>
                        <!-- Styled action buttons -->
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@ator.Id">Detalhes</a> 
                        @if (role == "Curador")
                        {
                            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@ator.Id">Editar</a>
                            <form asp-action="Delete" asp-route-id="@ator.Id" method="post" onsubmit="return confirm('Tem certeza que deseja deletar este ator?');">
                                <button type="submit" class="btn btn-danger btn-sm">Deletar</button>
                            </form>
                        }                                            
                </tr>
            }
        </tbody>
    </table>
}
