@model IM2B.ViewModels.Ator.FormAtorViewModel

@{
    ViewData["Title"] = "Editar Ator";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @* Hidden Id for Edit *@
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DataNasc" class="form-label"></label>
        <input asp-for="DataNasc" class="form-control" type="date"
               value="@(Model.DataNasc.ToString("yyyy-MM-dd"))" />
        <span asp-validation-for="DataNasc" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DataObito" class="form-label"></label>
        <input asp-for="DataObito" class="form-control" type="date"
               value="@(Model.DataObito.HasValue? Model.DataObito.Value.ToString("yyyy-MM-dd") : "")" />
        <span asp-validation-for="DataObito" class="text-danger"></span>
    </div>


    <div class="form-group mb-3">
        <label asp-for="Biografia" class="form-label"></label>
        <textarea asp-for="Biografia" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Biografia" class="text-danger"></span>
    </div>



    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}