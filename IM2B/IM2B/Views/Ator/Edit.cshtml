@model IM2B.ViewModels.Ator.FormAtorViewModel

@{
    ViewData["Title"] = "Editar Ator";
}

<div class="hero-section">
    <div class="container">
        <h2 class="mb-3"><i class="fas fa-user-edit"></i> Editar Ator</h2>
        <p class="text-secondary">Apenas curadores podem editar atores</p>
    </div>
</div>

<div class="card bg-dark text-light border-warning">
    <div class="card-body">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            @* Hidden Id *@
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Nome" class="form-label">
                    <i class="fas fa-user"></i> Nome
                </label>
                <input asp-for="Nome"
                       class="form-control bg-dark text-light border-secondary"
                       placeholder="Nome do ator" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="DataNasc" class="form-label">
                            <i class="fas fa-birthday-cake"></i> Data de Nascimento
                        </label>
                        <input asp-for="DataNasc"
                               type="date"
                               class="form-control bg-dark text-light border-secondary"
                               value="@Model.DataNasc.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="DataNasc" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="DataObito" class="form-label">
                            <i class="fas fa-cross"></i> Data de Óbito
                        </label>
                        <input asp-for="DataObito"
                               type="date"
                               class="form-control bg-dark text-light border-secondary"
                               value="@(Model.DataObito.HasValue? Model.DataObito.Value.ToString("yyyy-MM-dd") : "")" />
                        <span asp-validation-for="DataObito" class="text-danger"></span>
                        <small class="text-secondary">Opcional</small>
                    </div>
                </div>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Biografia" class="form-label">
                    <i class="fas fa-align-left"></i> Biografia
                </label>
                <textarea asp-for="Biografia"
                          rows="5"
                          class="form-control bg-dark text-light border-secondary"
                          placeholder="Breve biografia do ator"></textarea>
                <span asp-validation-for="Biografia" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <div class="card bg-dark border-warning mb-4">
                    <img src="@($"/atores/{Model.Id}.jpg")"
                         class="card-img-top img-fluid"
                         alt="@Model.Nome Foto" />
                </div>
            </div>            

            <div class="form-group mb-4">
                <label asp-for="Foto" class="form-label">
                    <i class="fas fa-image"></i> Alterar foto do ator
                </label>

                <input asp-for="Foto"
                       type="file"
                       accept="image/*"
                       class="form-control bg-dark text-light border-secondary" />

                <span asp-validation-for="Foto" class="text-danger"></span>

                <small class="text-secondary">
                    a foto do ator será guardado em <code>wwwroot/atores/{id}.jpg</code>
                </small>
            </div>

            <div class="alert alert-warning" role="alert">
                <i class="fas fa-exclamation-triangle"></i>
                <strong>Atenção!</strong> As alterações feitas ao ator serão guardadas permanentemente.
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-check"></i> Salvar Alterações
                </button>

                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancelar
                </a>

                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left"></i> Voltar à lista
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
