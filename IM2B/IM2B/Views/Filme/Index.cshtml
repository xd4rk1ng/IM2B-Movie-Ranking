@model IEnumerable<shared.Models.Filme>
@using System.Security.Claims

@{
    string role = User.IsInRole("Curador") ? "Curador" :
                  User.IsInRole("Utilizador") ? "Utilizador" : "Visitante";

    ViewData["Title"] = "Lista de Filmes";
}

<div class="hero-section">
    <div class="container">
        <h2 class="mb-3"><i class="fas fa-film"></i> Lista de Filmes</h2>
        @if (role == "Curador")
        {
            <a class="btn btn-imdb" asp-action="Create">
                <i class="fas fa-plus-circle"></i> Adicionar Novo Filme
            </a>
        }
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center" role="alert">
        <i class="fas fa-info-circle"></i> Nenhum filme encontrado.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-dark table-striped table-hover">
            <thead>
                <tr>
                    <th><i class="fas fa-video"></i> Título</th>
                    <th><i class="fas fa-calendar"></i> Ano de Lançamento</th>
                    <th><i class="fas fa-star"></i> Avaliação</th>
                    <th class="text-center"><i class="fas fa-cog"></i> Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var filme in Model)
                {
                    <tr>
                        <td class="movie-title">@filme.Titulo</td>
                        <td>@filme.DataLancamento.ToString("dd/MM/yyyy")</td>
                        <td>
                            <span class="rating">
                                @for (int i = 0; i < filme.Avaliacao && i < 5; i++)
                                {
                                    <i class="fas fa-star"></i>
                                }
                                @for (int i = filme.Avaliacao; i < 5; i++)
                                {
                                    <i class="far fa-star"></i>
                                }
                            </span>
                            <small>(@filme.Avaliacao/5)</small>
                        </td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@filme.Id" class="btn btn-sm btn-outline-warning me-1" title="Ver Detalhes">
                                <i class="fas fa-eye"></i> Detalhes
                            </a>
                            @if (role == "Curador")
                            {
                                ﻿<a asp-action="Edit" asp-route-id="@filme.Id" class="btn btn-sm btn-outline-primary me-1" title="Editar">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@filme.Id" class="btn btn-sm btn-outline-danger" title="Apagar">
                                    <i class="fas fa-trash"></i> Apagar
                                </a>
                            }
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}


