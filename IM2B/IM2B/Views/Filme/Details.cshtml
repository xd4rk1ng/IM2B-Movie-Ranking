@model shared.Models.Filme

<h2>Detalhes do Filme</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Título</dt>
            <dd class="col-sm-9">@Model.Titulo</dd>

            <dt class="col-sm-3">Data de Lançamento</dt>
            <dd class="col-sm-9">
                @Model.DataLancamento.ToString("dd/MM/yyyy")
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
        Editar
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        Voltar à lista
    </a>
</div>