@using System.Security.Claims
@using Microsoft.AspNetCore.Identity
@inject UserManager<context.Entities.User> UserManager

@{   
    string role = User.IsInRole("Curador") ? "Curador" :
                  User.IsInRole("Utilizador") ? "Utilizador" : "Visitante";

    // Gets the user from the user manager and then searches for the full name
    var appUser = await UserManager.GetUserAsync(User);
    string nome = appUser?.NomeCompleto
                  ?? User.FindFirstValue(ClaimTypes.Name)
                  ?? User.Identity?.Name
                  ?? "Visitante";   
}

<!DOCTYPE html>
<html lang="pt-pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IM2B</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <p>@role</p>
        <nav class="navbar navbar-expand-lg navbar-dark bg-imdb">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <i class="fas fa-film"></i> IM2B
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Filme" asp-action="Index">
                                <i class="fas fa-video"></i> Filmes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Ator" asp-action="Index">
                                <i class="fas fa-star"></i> Atores
                            </a>
                        </li>
                    </ul>

                    @if (role == "Curador")
                    {
                        <div class="navbar-nav">
                            <a class="nav-link" asp-controller="AreaExclusiva" asp-action="Index" style="color: #ffc107;">
                                <i class="fas fa-lock me-1"></i> Área Exclusiva
                            </a>
                        </div>
                    }

                    @if (role == "Visitante")
                    {
                        <div class="navbar-nav">
                            <a class="nav-link" asp-controller="Account" asp-action="Login" >
                                Login
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="navbar-nav">
                            @if (role == "Utilizador")
                            {
                                <a class="nav-link" asp-controller="Account" asp-action="Index">@nome</a>
                            }
                            else
                            {
                                <a class="nav-link" asp-controller="Account" asp-action="Index">Administrator</a>
                            }
                        </div>
                        <div class="navbar-nav">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-link nav-link">Logout</button>
                            </form>
                        </div>
                    }

                    <!-- Área de autenticação -->
                    <!-- <partial name="_LoginPartial" /> -->
                </div>
            </div>
        </nav>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white text-center py-4 mt-5">
        <p>&copy; 2025 - IM2B - Sistema de Gestão de Filmes</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>