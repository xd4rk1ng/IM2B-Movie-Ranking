@using IM2B.ViewModels.Account
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>IM2B — @ViewData["Title"]</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <main class="container my-4">
        <div class="d-flex align-items-center justify-content-center" style="min-height: 70vh;">
            <div class="col-md-6 col-lg-4">
                <div class="hero-section">
                    <div class="text-center mb-4">
                        <i class="fas fa-user-circle fa-4x" style="color: var(--imdb-yellow);"></i>
                        <h2 class="mt-3"><i class="fas fa-sign-in-alt"></i> Login</h2>
                    </div>



                    <form class="login-form" asp-action="Login" asp-controller="Account" method="post" novalidate>
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input autofocus
                                   type="text"
                                   class="form-control"
                                   id="username"
                                   asp-for="UserName" />
                            <span asp-validation-for="UserName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" asp-for="Password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-imdb btn-lg">
                                <i class="fas fa-sign-in-alt"></i> Login
                            </button>
                        </div>

                        <div class="mt-3">
                            <!-- Shows if you inserted wrong values-->
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                    </form>
                    <div class="text-center">
                        <a asp-action="Register" asp-controller="Account" style="color: var(--imdb-yellow); text-decoration: none;">
                            <i class="fas fa-user-plus"></i> Não tem conta? Registre-se
                        </a>
                    </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>