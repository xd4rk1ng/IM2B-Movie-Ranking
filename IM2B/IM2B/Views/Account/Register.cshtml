@model IM2B.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Register" asp-controller="Account" method="post" novalidate>
    <div class="mb-3">
        <label for="nomecompleto" class="form-label">Nome Completo:</label>
        <input autofocus
               type="text"
               class="form-control"
               id="nomecompleto"
               asp-for="NomeCompleto" />
        <span asp-validation-for="NomeCompleto" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input type="text" class="form-control" id="username" asp-for="UserName" />
        <span asp-validation-for="UserName" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="text" class="form-control" id="email" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger small"></span>

    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label for="confirmpassword" class="form-label">Confirm Password</label>
        <input type="password" class="form-control" id="confirmpassword" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
    </div>

    <div>
        <button type="submit" class="btn btn-primary btn-login">Registrar utilizador</button>
    </div>

    <div class="mt-3">
        <!-- Shows if you inserted wrong values-->
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>
</form>
